<div class='page-header'>
  <h1><a href='<%= @link.url %>'><%= @link.title %></a><br> <small>Submitted by <%= @link.user.email %></small></h1>
</div>

<div class='btn-group'>
  <%= link_to 'Visit URL', @link.url, class: 'btn btn-primary' %>
</div>

<% if @link.user == current_user %>
  <div class='btn-group'>
    <%= link_to 'Edit', edit_link_path(@link), class: 'btn btn-secondary' %>
    <%= link_to 'Delete', @link, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary' %>
  </div>
<% end  %>

<div class='btn-group pull-right'>
  <%= link_to like_link_path(@link), method: :put, class: 'btn btn-secondary' do %>
  <span class='fa fa-chevron-circle-up'></span>
  Upvote
  <%= @link.get_upvotes.size %>
<% end %>
<%= link_to dislike_link_path(@link), method: :put, class: 'btn btn-secondary' do %>
  <span class='fa fa-chevron-circle-down'></span>
  Downvote
  <%= @link.get_downvotes.size %>
<% end %>
</div>
